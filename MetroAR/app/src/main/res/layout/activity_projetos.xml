<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:text="Projetos"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Campo de nome do projeto e botão de adicionar -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/inputProjectName"
                android:hint="Nome do projeto"
                android:hintTextColor="#AAAAAA"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:background="@drawable/edittext_rounded"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnAddProject"
                android:src="@drawable/ic_add"
                android:backgroundTint="#22C55E"
                android:background="@drawable/add_button"
                android:contentDescription="Adicionar projeto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Subtítulo -->
        <TextView
            android:text="Projetos acessados recentemente"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#AAAAAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Grade de pastas -->
        <GridLayout
            android:id="@+id/gridProjects"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp">

            <!-- Item de pasta -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/ic_folder"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <TextView
                    android:text="Nome: projeto"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:text="Data: 06/01/2021"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Copie o bloco acima para mais pastas -->
        </GridLayout>

        <!-- Barra inferior -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnHome"
                android:src="@drawable/ic_home"
                android:background="@android:color/transparent"
                android:contentDescription="Início"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:tint="#3B82F6" />

            <ImageButton
                android:id="@+id/btnGallery"
                android:src="@drawable/ic_gallery"
                android:background="@android:color/transparent"
                android:contentDescription="Galeria"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:tint="#3B82F6" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>